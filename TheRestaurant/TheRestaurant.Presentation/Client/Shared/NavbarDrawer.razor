
<MudLayout>

    <MudDrawer 
        @bind-Open="@open" 
        Elevation="1" 
        OnBackdropClick="@CloseDrawer"
        onchange="@CloseDrawer">

        <MudDrawerHeader>
            <MudText Typo="Typo.h6">The Restaurant</MudText>
        </MudDrawerHeader>
        
    </MudDrawer>
</MudLayout>

@code {
    bool open = false;

    void ToggleDrawer()
    {
        open = !open;
    }

    void CloseDrawer()
    {
        open = false;
    }
}
