@using MudBlazor

<MudLayout>

    <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@ToggleDrawer" />

    <MudDrawer @bind-Open="@open" Elevation="1" OnBackdropClick="@CloseDrawer">
        <MudDrawerHeader>
            <MudText Typo="Typo.h6">The Restaurant</MudText>
        </MudDrawerHeader>
        <MudNavMenu>
            <MudNavLink href="/Menu" OnClick="@CloseDrawer">Se meny</MudNavLink>
            <MudNavLink href="/Order" OnClick="@CloseDrawer">Beställning</MudNavLink>
            <MudNavLink href="/AboutPage" OnClick="@CloseDrawer">Om restaurangen</MudNavLink>
        </MudNavMenu>
    </MudDrawer>
</MudLayout>

@code {
    bool open = false;

    void ToggleDrawer()
    {
        open = !open;
    }

    void CloseDrawer()
    {
        open = false;
    }
}
