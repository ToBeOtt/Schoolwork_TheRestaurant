@inherits LayoutComponentBase
@using MudBlazor
@using TheRestaurant.Presentation.Client.Components.Themes

<TheRestaurantColorTheme />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    
    <MudGrid>
        <MudItem xs="12">
            <MudPaper Width="100%" Style="border-radius:0;">
                <HeaderNavBar />
            </MudPaper>
        </MudItem>

        <MudItem xs="12" Style="rounded-0">
            <MudPaper Height="60vh" Width="100%" Style="border-radius:0;">
                @Body
            </MudPaper>
        </MudItem>

        <MudItem xs="12">
            @* Lab Area, should be replaced with a proper footer component *@
            <MudButton Variant="Variant.Filled" Color="Color.Secondary">Primary</MudButton>

            <MudText Class="mud-text-primary" Align="Align.Center"
                     Typo="Typo.h1">
                H1 FOOTER
            </MudText>

            <MudText Align="Align.Center"
                     Typo="Typo.h2">
                H2 FOOTER
            </MudText>

            <MudPaper>
                <MudLink href="/About/AboutPage" Underline="Underline.None">
                    About
                </MudLink>
            </MudPaper>
            @* Lab Area, should be replaced with a proper footer component *@

        </MudItem>

    </MudGrid>

</MudLayout>
