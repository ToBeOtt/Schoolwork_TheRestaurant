@inherits LayoutComponentBase
@using MudBlazor
@using TheRestaurant.Presentation.Client.Components.Index.Carousel
@using TheRestaurant.Presentation.Client.Components.Themes

<TheRestaurantColorTheme />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar>
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Primary" Edge="Edge.Start" OnClick="@DrawerToggle" />
        <MudNavLink href="/" OnClick="@DrawerToggle">
            <MudText Typo="Typo.h5">The Resturant</MudText>
        </MudNavLink>

        <MudSpacer />
        <AdminNavMenu />
        <UserNavMenu />
    </MudAppBar>


    <MudDrawer @bind-Open="@_drawerOpen" Variant="DrawerVariant.Temporary">
        <MainNavMenu />
    </MudDrawer>

    <MudMainContent>
        <MudContainer style="">
        @Body
        </MudContainer>
    </MudMainContent>
    @* <ThemeReference/> *@
    <MainFooterComponent/>

</MudLayout>

@code {
    bool _drawerOpen = false;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}


