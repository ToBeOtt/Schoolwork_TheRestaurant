@using MudBlazor


<MudPaper Class="mud-primary">
    <MudText Typo="Typo.h4" Align="Align.Center">Style Cheat Sheet</MudText>
    <MudExpansionPanels Elevation="25">
        <MudExpansionPanel Text="Style Cheat Sheet">
            <MudText Typo="Typo.body1" Align="Align.Center">A small cheatcheet during dev</MudText>

            <MudText Typo="Typo.h4" Align="Align.Center">Headings</MudText>

            <MudText Typo="Typo.h1">h1. Heading</MudText>
            <MudText Typo="Typo.h2">h2. Heading</MudText>
            <MudText Typo="Typo.h3">h3. Heading</MudText>
            <MudText Typo="Typo.h4">h4. Heading</MudText>
            <MudText Typo="Typo.h5">h5. Heading</MudText>
            <MudText Typo="Typo.h6">h6. Heading</MudText>

            <MudText Typo="Typo.h4" Align="Align.Center">Text</MudText>
            <MudText Class="mb-3" Typo="Typo.subtitle1">subtitle1. Lorem ipsum dolor sit amet, consectetur adipisicing elit. Quos blanditiis tenetur</MudText>
            <MudText Class="mb-3" Typo="Typo.subtitle2">subtitle2. Lorem ipsum dolor sit amet, consectetur adipisicing elit. Quos blanditiis tenetur</MudText>
            <MudText Class="mb-3" Typo="Typo.body1">body1. Lorem ipsum dolor sit amet, consectetur adipisicing elit. Quos blanditiis tenetur unde suscipit, quam beatae rerum inventore consectetur, neque doloribus, cupiditate numquam dignissimos laborum fugiat deleniti? Eum quasi quidem quibusdam.</MudText>
            <MudText Class="mb-3" Typo="Typo.body2">body2. Lorem ipsum dolor sit amet, consectetur adipisicing elit. Quos blanditiis tenetur unde suscipit, quam beatae rerum inventore consectetur, neque doloribus, cupiditate numquam dignissimos laborum fugiat deleniti? Eum quasi quidem quibusdam.</MudText>
            <MudText Class="mb-3" Typo="Typo.button">BUTTON TEXT</MudText><br />
            <MudText Class="mb-3" Typo="Typo.caption">caption text</MudText><br />
            <MudText Class="mb-3" Typo="Typo.overline">OVERLINE TEXT</MudText>

            <MudAlert></MudAlert>
            <MudText Class="mb-3" Typo="Typo.body1" Color="Color.Warning">Warning!</MudText>
            <MudText Class="mb-3" Typo="Typo.body1" Color="Color.Success">Success!</MudText>


            <MudText Typo="Typo.h4" Align="Align.Center">Buttons</MudText>
            <MudText Typo="Typo.body1" Align="Align.Center">
                Bad contrast... redesign...?
            </MudText>
            <MudGrid Justify="Justify.FlexStart">
                <MudItem xs="4">
                    <MudPaper Class="mud-info d-flex align-center justify-center mud-width-full py-8">
                        <MudButton Variant="Variant.Filled" Color="Color.Primary">Primary</MudButton>
                        <MudButton Variant="Variant.Filled" Color="Color.Secondary">Secondary</MudButton>
                    </MudPaper>
                </MudItem>
                <MudItem xs="4">
                    <MudPaper Class="mud-info d-flex align-center justify-center mud-width-full py-8">

                        <MudButton Variant="Variant.Outlined" Color="Color.Primary">Primary</MudButton>
                        <MudButton Variant="Variant.Outlined" Color="Color.Secondary">Secondary</MudButton>
                    </MudPaper>
                    <MudDivider />
                </MudItem>
                <MudItem xs="4">
                    <MudPaper Class="mud-info d-flex align-center justify-center mud-width-full py-8">

                        <MudButton Variant="Variant.Text" Color="Color.Primary">Primary</MudButton>
                        <MudButton Variant="Variant.Text" Color="Color.Secondary">Secondary</MudButton>
                    </MudPaper>
                </MudItem>
            </MudGrid>

            <MudText Typo="Typo.h4" Align="Align.Center">Icons</MudText>
            <MudText Typo="Typo.body1" Align="Align.Center">
                Use whatever Icons you see fit, this is just a styleguide.
            </MudText>

            <MudGrid Justify="Justify.FlexStart">
                <MudItem xs="6">
                    <MudPaper Class="mud-info d-flex align-center justify-center mud-width-full py-8">
                        <MudIcon Icon="@Icons.Material.Filled.AccessibleForward" Color="Color.Primary" Size="Size.Small" />
                        <MudIcon Icon="@Icons.Material.Filled.AccessibleForward" Color="Color.Primary" />
                        <MudIcon Icon="@Icons.Material.Filled.AccessibleForward" Color="Color.Primary" Size="Size.Large" />
                        <MudIcon Icon="@Icons.Material.Filled.AccessibleForward" Color="Color.Primary" Style="font-size: 8rem;" />
                    </MudPaper>
                </MudItem>
                <MudItem xs="6">
                    <MudPaper Class="d-flex align-center justify-center mud-width-full py-8">
                        <MudIcon Icon="@Icons.Material.Filled.AccessibleForward" Color="Color.Info" Size="Size.Small" />
                        <MudIcon Icon="@Icons.Material.Filled.AccessibleForward" Color="Color.Info" />
                        <MudIcon Icon="@Icons.Material.Filled.AccessibleForward" Color="Color.Info" Size="Size.Large" />
                        <MudIcon Icon="@Icons.Material.Filled.AccessibleForward" Color="Color.Info" Style="font-size: 8rem;" />
                    </MudPaper>
                </MudItem>
            </MudGrid>

            <MudText Typo="Typo.h4" Align="Align.Center">Card</MudText>
            <MudText Typo="Typo.body1" Align="Align.Center">
                Examples
            </MudText>
            <MudGrid Justify="Justify.FlexStart">
                <MudItem xs="3">
                    <MudCard Class="mud-secondary">
                        <MudCardMedia Image="https://www.escoffieronline.com/wp-content/uploads/2014/10/fine-dining-entree-grilled-lamb-50866644.jpg" Height="200" />
                        <MudCardContent>
                            <MudText Typo="Typo.h5" Color="Color.Primary">Old Paint</MudText>
                            <MudText Typo="Typo.body2" Color="Color.Primary">Old paint found on a stone house door.</MudText>
                            <MudText Typo="Typo.body2" Color="Color.Primary">This photo was taken in a small village in Istra Croatia.</MudText>
                        </MudCardContent>
                        <MudCardActions Class="d-flex justify-space-between">
                            <MudButton Class="ml-2" Variant="Variant.Filled" Color="Color.Primary">Order</MudButton>
                            <MudButton Class="mr-2" Variant="Variant.Text" Color="Color.Primary">Learn More</MudButton>
                        </MudCardActions>
                    </MudCard>
                </MudItem>
                 <MudItem xs="3">
                    <MudCard Class="mud-primary">
                        <MudCardMedia Image="https://www.escoffieronline.com/wp-content/uploads/2014/10/fine-dining-entree-grilled-lamb-50866644.jpg" Height="200" />
                        <MudCardContent>
                            <MudText Typo="Typo.h5">Old Paint</MudText>
                            <MudText Typo="Typo.body2">Old paint found on a stone house door.</MudText>
                            <MudText Typo="Typo.body2">This photo was taken in a small village in Istra Croatia.</MudText>
                        </MudCardContent>
                        <MudCardActions>
                            <MudButton Class="mx-2" Variant="Variant.Filled" Color="Color.Secondary">Order</MudButton>
                            <MudButton Variant="Variant.Text">Learn More</MudButton>
                        </MudCardActions>
                    </MudCard>
                </MudItem>
                 <MudItem xs="3">
                    <MudCard>
                        <MudCardMedia Image="https://www.escoffieronline.com/wp-content/uploads/2014/10/fine-dining-entree-grilled-lamb-50866644.jpg" Height="200" />
                        <MudCardContent>
                            <MudText Typo="Typo.h5">Old Paint</MudText>
                            <MudText Typo="Typo.body2">Old paint found on a stone house door.</MudText>
                            <MudText Typo="Typo.body2">This photo was taken in a small village in Istra Croatia.</MudText>
                        </MudCardContent>
                        <MudCardActions>
                            <MudButton Variant="Variant.Filled" Color="Color.Secondary">Order</MudButton>
                            <MudButton Variant="Variant.Text">Learn More</MudButton>
                        </MudCardActions>
                    </MudCard>
                </MudItem>
                <MudItem xs="3">
                    <MudCard Class="mud-tertiary">
                        <MudCardMedia Image="https://www.escoffieronline.com/wp-content/uploads/2014/10/fine-dining-entree-grilled-lamb-50866644.jpg" Height="200" />
                        <MudCardContent>
                            <MudText Typo="Typo.h5" Color="Color.Primary">Old Paint</MudText>
                            <MudText Typo="Typo.body2" Color="Color.Primary">Old paint found on a stone house door.</MudText>
                            <MudText Typo="Typo.body2" Color="Color.Primary">This photo was taken in a small village in Istra Croatia.</MudText>
                        </MudCardContent>
                        <MudCardActions>
                            <MudButton Class="mr-6" Variant="Variant.Outlined" Color="Color.Primary">Order</MudButton>
                            <MudButton Variant="Variant.Text" Color="Color.Primary">Learn More</MudButton>
                        </MudCardActions>
                    </MudCard>
                </MudItem>
            </MudGrid>

        </MudExpansionPanel>
    </MudExpansionPanels>
</MudPaper>

