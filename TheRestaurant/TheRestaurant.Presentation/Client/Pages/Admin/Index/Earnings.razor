@using System.Net.Http.Json
@inject HttpClient httpClient

<MudDataGrid Items="@Elements.Take(4)">
    <Columns>
        <PropertyColumn Property="x => x.Id" Title="Nr" />
        <PropertyColumn Property="x => x.Responsible" />
        <PropertyColumn Property="x => x.Date" />
        <PropertyColumn Property="x => x.Sum" Format="C"/>
    </Columns>
</MudDataGrid>
@code {
    public record Order(int Id, string Responsible, DateTime Date, int Sum);
    private IEnumerable<Order> Elements = new List<Order>();

    protected override async Task OnInitializedAsync()
    {
        Elements = new List<Order>
        {
            new Order(1, "CPA", DateTime.Now.Date, 2),
            new Order(2, "Adam", DateTime.Now, 2),
        };
    }
}