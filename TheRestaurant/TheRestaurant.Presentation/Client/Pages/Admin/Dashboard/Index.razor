@page "/admin/dashboard/index"
@using TheRestaurant.Presentation.Client.Components.Admin.Dashboard
@using TheRestaurant.Presentation.Client.Shared.Admin
@inject HttpClient Http


<AdminLayout>
    <AdminContent>
        <PageTitle>Statistik för färdigställda ordrar och mängden sålda produkter</PageTitle>
        <MudGrid>

            <MudText>Välj ett datumspan för att se orderstatistik.</MudText>
            <MudItem xs="12">
                <MudPaper 
                    Elevation="0"
                    Class="d-flex align-center justify-center mud-width-full py-3">
                    <OrderChartByDate />
                </MudPaper>
            </MudItem> 

            <MudText>Produkter sålda.</MudText>
            <MudItem xs="12">
                <MudPaper Elevation="0"
                        Class="d-flex align-center justify-center py-3">
                    <ProductDonutChart />
                </MudPaper>
            </MudItem>

            <MudText>Välj en dag att för att se hur många ordrar som lades den dagen samt vilka tider de lades.</MudText>
            <MudItem xs="12">
                
                <MudPaper Elevation="0"

                        Class="d-flex align-center justify-left mud-width-full py-3">
                    <OrderChartByDay />
                </MudPaper>
            </MudItem> 
        </MudGrid>


    </AdminContent>
</AdminLayout>

