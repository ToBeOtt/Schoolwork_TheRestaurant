<MudGrid>
    <MudItem xs="12" md="8" lg="6">
        <MudPaper Class="pa-4">
            <h3>Skapa ny produkt</h3>
            @*<MudForm Model="_createProduct" OnValidSubmit="HandleValidSubmit">*@
