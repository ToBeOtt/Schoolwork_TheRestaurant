@code {
    private readonly MenuItemValidation _createMenuItem = new MenuItemValidation();
    private bool Error;
    private string ErrorMessage;
    private async Task HandleValidSubmit()
    {
        var request = new CreateMenuItemRequest(
            Name: _createMenuItem.Name,
            Description: _createMenuItem.Description,
            MenuPhoto: _createMenuItem.MenuPhoto
        // Include Category & Allergy when implemented
        );

        var apiUrl = "api/admin/menuitems/create";

        var response = await HttpClient.PostAsJsonAsync(apiUrl, request);

        if (response.IsSuccessStatusCode)
        {
            // Change navigation link?
            NavigationManager.NavigateTo("/menuitems");
        }
        else
        {
            Error = true;
            ErrorMessage = "Det gick inte att registrera informationen";
        }
    }

    private async Task HandlePhotoUpload(InputFileChangeEventArgs e)
    {
        var file = e.File;
        if (file != null)
        {
            using var stream = file.OpenReadStream();
            MemoryStream ms = new MemoryStream();
            await stream.CopyToAsync(ms);
            _createMenuItem.MenuPhoto = ms.ToArray();
        }
    }
}
